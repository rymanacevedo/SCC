{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": [
      "node_modules",
      "dist",
      "build",
      ".next",
      ".cache",
      ".turbo",
      "**/node_modules/**",
      "bin"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "ignore": [
      "node_modules",
      "docs",
      "dist",
      "public",
      "**/node_modules/**",
      "bin"
    ]
  },
  "organizeImports": {
    "enabled": true,
    "ignore": [
      "node_modules",
      "docs",
      "dist",
      "public",
      "**/node_modules/**",
      "bin"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "always"
    }
  }
}
